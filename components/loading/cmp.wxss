/* components/loading/cmp.wxss */
.container{
    width:60rpx;
    height: 60rpx;
    position: relative;
}
.circle{
    position: absolute;
    left:0;
    top:0;
    width:100%;
    height: 100%;
    background-color: #333;
    border-radius: 50%;
    opacity: 0.6;
    animation: move 2s infinite;
}
.active{
    animation-delay: 1s
}
@keyframes move{
    0%{
        transform: scale(0)
    }
    50%{
        transform: scale(1)
    }   
    100%{
        transform: scale(0)
    }
}